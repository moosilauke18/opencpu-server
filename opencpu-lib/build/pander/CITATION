if(!exists("meta") || is.null(meta)) meta <- packageDescription("pander")
citHeader("To cite package 'pander' in publications, please use:")
year <- format(as.Date(meta$Date), '%Y')
vers <- paste("R package version", meta$Version)
citEntry(entry       = "Manual",
         title       = "pander: An R Pandoc Writer",
         author      = as.person("Gergely Daróczi"),
         year        = year,
         note        = vers,
         url         = "http://cran.r-project.org/package=pander",
         textVersion = paste("Daróczi, G. (",
                             year,
                             "). pander: An R Pandoc Writer. ",
                             vers,
                             ", URL http://cran.r-project.org/package=pander", sep = ""))
